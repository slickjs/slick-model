{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": false,
        "outDir": "lib",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "types": [
            "reflect-metadata"
        ]
    }
}